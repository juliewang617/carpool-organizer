  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server",
    "build": "npm run build-client && npm run build-server",
    "build-client": "npx webpack --config ./webpack.config.prod.js",
    "build-server": "node ./scripts/build-image",
